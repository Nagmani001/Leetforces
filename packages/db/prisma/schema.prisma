generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id                String           @id @default(uuid())
  title             String           @unique
  DescriptionTop    String // markdown 
  DescriptionBottom String? // markdown 
  cpuTimeLimit      Int
  memoryLimit       Int
  basicTestCases    BasicTestCases[]
  testcases         TestCase[]
  difficulty        String
}

model TestCase {
  id        String   @id @default(uuid())
  input     String
  output    String
  Problem   Problem? @relation(fields: [problemId], references: [id])
  problemId String
}

model BasicTestCases {
  id        String   @id @default(uuid())
  input     String
  output    String
  Problem   Problem? @relation(fields: [problemId], references: [id])
  problemId String
}
